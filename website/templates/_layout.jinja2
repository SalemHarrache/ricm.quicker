{% set messages_title = {
  "error": "Erreur",
  "info": "Information"} %}

{% for category, msgs in get_flashed_messages(with_categories=true) | sort(0) | groupby(0) %}
<div class="message {{ category }}">
  <h3>{{messages_title[category]}}</h3>
{% for category, msg in msgs %}
  <p>{{ msg }}</p>
{% endfor %}
</div>
{% endfor %}

